                    <% } %>
                </td>
                <td>
                    <button 
                        type="button" 
                        class="btn btn-sm <%= category.isBlocked ? 'btn-success' : 'btn-danger' %> status-toggle-btn"
                        onclick="toggleCategoryStatus('<%= category._id %>')"
                    >
                        <%= category.isBlocked ? 'Unblock' : 'Block' %>
                    </button>
