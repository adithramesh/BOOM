    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const menuItems = document.querySelectorAll('.menu-item');

            menuItems.forEach(item => {
                const link = item.querySelector('a');
                if (link.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        });
    </script>

    <script>
        document.getElementById('salesReportBtn').addEventListener('click', function () {
            $('#salesReportModal').modal('show');
        });
        
        document.getElementById('salesReportForm').addEventListener('submit', function (e) {
            e.preventDefault();
        
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
        
            fetch('/admin/sales-report', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ startDate, endDate })
            })
            .then(response => response.blob())
            .then(blob => {
                // Generate PDF
                const pdfUrl = window.URL.createObjectURL(blob);
                const pdfLink = document.createElement('a');
                pdfLink.href = pdfUrl;
                pdfLink.download = 'sales-report.pdf';
                document.body.appendChild(pdfLink);
                pdfLink.click();
                document.body.removeChild(pdfLink);
        
                // Generate Excel
                const excelUrl = '/admin/sales-report/excel?startDate=' + startDate + '&endDate=' + endDate;
                window.location.href = excelUrl;
            })
            .catch(error => console.error('Error generating sales report', error));
        });
        </script>



    
  <script>
    // Function to fetch and render chart data
    async function fetchAndRenderChart(timeframe, canvasId) {
      try {
        const response = await fetch(`/admin/dashboard/product-counts/${timeframe}`);
        const data = await response.json();
  
        console.log(`Data received for ${timeframe}:`, data);
  
        // Render Chart.js chart
        renderChart(canvasId, data.labels, data.data, timeframe);
      } catch (error) {
        console.error(`Error fetching data for ${timeframe}:`, error);
      }
    }
  
    // Function to render a Chart.js chart
    function renderChart(canvasId, labels, data, timeframe) {
      const ctx = document.getElementById(canvasId).getContext('2d');
  
      // Create new chart instance
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels.map(label => formatLabel(timeframe, label)),
          datasets: [{
            label: 'Number of Products',
            data: data,
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
          }]
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Number of Products'
              }
            },
            x: {
              title: {
                display: true,
                text: timeframe.charAt(0).toUpperCase() + timeframe.slice(1)
              }
            }
          }
        }
      });
    }
  
    // Function to format labels based on timeframe
    function formatLabel(timeframe, label) {
      if (timeframe === 'months') {
        // Convert numeric month to name
        const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        return monthNames[label - 1]; // Assuming label is 1-based for months
      } else if (timeframe === 'years') {
        // Directly return the year
        return label;
      } else if (timeframe === 'days') {
        // Custom date formatting if needed (already working fine)
        return label;
      }
    }
  
    // Fetch and render charts for initial load
    fetchAndRenderChart('months', 'myChartMonths');
    fetchAndRenderChart('years', 'myChartYears');
    fetchAndRenderChart('days', 'myChartDays');
  </script>
  


