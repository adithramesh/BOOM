  <style>
    /* New styles for the search bar */
    .search-wrap {
      background-color: #f1f1f1;
      padding: 15px;
      border-radius: 8px;
      margin-top: 20px;
    }

    .search-wrap .container {
      display: flex;
      align-items: center;
    }

    .search-form {
      display: flex;
      width: 100%;
    }

    .search-input {
      flex: 1;
      padding: 10px 15px;
      border: 2px solid #ddd;
      border-radius: 4px 0 0 4px;
      font-size: 16px;
      outline: none;
      transition: border-color 0.3s;
    }

    .search-input:focus {
      border-color: #d9534f;
    }

    .search-button {
      padding: 10px 20px;
      background-color: #d9534f;
      color: #fff;
      border: none;
      border-radius: 0 4px 4px 0;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s;
    }

    .search-button:hover {
      background-color: #d9534f;
    }

    .search-close {
      margin-right: -40px;
      cursor: pointer;
    }
  </style>
</head>

