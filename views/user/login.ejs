<!DOCTYPE html>
<html lang="en">
<head>
    <title>BOOM &mdash; Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700"> 
    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="/user/css/bootstrap.min.css">
    <link rel="stylesheet" href="/user/css/magnific-popup.css">
    <link rel="stylesheet" href="/user/css/jquery-ui.css">
    <link rel="stylesheet" href="/user/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/user/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="/user/css/aos.css">
    <link rel="stylesheet" href="/user/css/style.css">
    <style>
        /* Adjust button size */
        .btn-google, .btn-facebook {
            width: calc(100% - 34px); /* Adjust width */
            margin-bottom: 10px; /* Adjust the margin as needed */
        }
    </style>
</head>
<body>

<div class="site-wrap">

    <div class="custom-border-bottom py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0"><strong class="text-black">Login</strong></div>
            </div>
        </div>
    </div>

    <!-- BOOM logo -->
    <div class="site-logo">
        <a href="/user/index" class="js-logo-clone">BOOM</a>
    </div>
    <% if(expressFlash.passworderror){%>
        <div style="color: red; font-size: 16px; font-weight: bold;">
            <%= expressFlash.passworderror%>
        </div>
            <%}%>

            <% if(expressFlash.emailerror){%>
                <div style="color: red; font-size: 16px; font-weight: bold;">
                    <%= expressFlash.emailerror%>
                </div>
                           <%}%>

    <div class="site-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <form action="/user/login" method="POST" class="p-5 bg-white" onsubmit="return validateForm()">
                        <span id="loginError"></span>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="text-black" for="email">Email</label> 
                                <input type="email" id="email" name='email' onkeyup="validateEmail()" required class="form-control rounded-0">
                                <span id="emailError"></span>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="text-black" for="password">Password</label> 
                                <input type="password" id="password" name="password" onblur="validatePassword()" required class="form-control rounded-0">
                                <span id="passwordError"></span>
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Login" class="btn btn-black rounded-0 py-2 px-4" onsubmit="validateForm()">
                                
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="text-center small text-muted mb-15">or Log in with</div>

<!-- Sign in with Google button -->
<a href="/auth/google" class="btn btn-light font-sm w-100 mt-3 btn-google">
    <svg aria-hidden="true" class="icon-svg" width="20" height="20" viewBox="0 0 20 20">
        <path d="M16.51 8H8.98v3h4.3c-.18 1-.74 1.48-1.6 2.04v2.01h2.6a7.8 7.8 0 002.38-5.88c0-.57-.05-.66-.15-1.18z" fill="#4285F4"></path>
        <path d="M8.98 17c2.16 0 3.97-.72 5.3-1.94l-2.6-2a4.8 4.8 0 01-7.18-2.54H1.83v2.07A8 8 0 008.98 17z" fill="#34A853"></path>
        <path d="M4.5 10.52a4.8 4.8 0 010-3.04V5.41H1.83a8 8 0 000 7.18l2.67-2.07z" fill="#FBBC05"></path>
        <path d="M8.98 4.18c1.17 0 2.23.4 3.06 1.2l2.3-2.3A8 8 0 001.83 5.4L4.5 7.49a4.77 4.77 0 014.48-3.3z" fill="#EA4335"></path>
    </svg> Log in with Google
</a>

<!-- Sign in with Facebook button -->
<a href="/auth/facebook" class="btn btn-light font-sm w-100 mt-3 btn-facebook">
    <svg aria-hidden="true" class="icon-svg" width="20" height="20" viewBox="0 0 20 20">
        <path d="M3 1a2 2 0 00-2 2v12c0 1.1.9 2 2 2h12a2 2 0 002-2V3a2 2 0 00-2-2H3zm6.55 16v-6.2H7.46V8.4h2.09V6.61c0-2.07 1.26-3.2 3.1-3.2.88 0 1.64.07 1.87.1v2.16h-1.29c-1 0-1.19.48-1.19 1.18V8.4h2.39l-.31 2.42h-2.08V17h-2.5z" fill="#4167B2"></path>
    </svg> Log in with Facebook
</a>

<p class="text-center mb-4">Don't have an account? <a href="/user/register">Register</a></p>
<script src="/user/js/jquery-3.3.1.min.js"></script>
<script src="/user/js/jquery-ui.js"></script>
<script src="/user/js/popper.min.js"></script>
<script src="/user/js/bootstrap.min.js"></script>
<script src="/user/js/owl.carousel.min.js"></script>
<script src="/user/js/jquery.magnific-popup.min.js"></script>
<script src="/user/js/aos.js"></script>

<script src="/user/js/main.js"></script>
<script>

function validateForm(){
    var isValidateEmail=validateEmail()
    var isValidatePassword=validatePassword()
    // var isValidateConfirmPassword=validateConfirmPassword()
    if(isValidateEmail&&isValidatePassword){
        return true
    }else{
        let loginError=document.getElementById('loginError')
        loginError.innerHTML="Fill all the fields properly"
        loginError.style.color = 'red';
        return false
    }
}
    // Validate email function
    function validateEmail() {
        var emailError = document.getElementById('emailError');
        var email = document.getElementById('email').value;
        var emailPattern = /^[A-Za-z\._\-[0-9]+@[A-Za-z]+\.[a-z]{2,}$/;
        if (!email.match(emailPattern)) {
            emailError.innerHTML = "Email is invalid";
            emailError.style.color = 'red';
            return false;
        } else {
            emailError.innerHTML = '';
            return true;
        }
    }

    // Validate password function
    function validatePassword() {
        var passwordError = document.getElementById('passwordError');
        var password = document.getElementById('password').value;
        var passwordPattern = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[!@#$%^&*()-_+=<>?])[A-Za-z\d\S]{8,}$/;
        if (!password.match(passwordPattern)) {
            passwordError.innerHTML = 'Password shall meet the following criteria:<br>' +
                'At least 8 characters in length<br>' +
                'At least one letter shall be uppercase or lowercase<br>' +
                'At least one special character<br>' +
                'At least one digit';
            passwordError.style.color = 'red';
            return false;
        } else {
            passwordError.innerHTML = '';
            return true;
        }
    }
</script>

</body>
</html>
