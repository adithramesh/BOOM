                    <%= item.product.description %>
                  </p> <!-- Access description from item.product -->
                  <p>Size: <%= item.size %>
                  </p> <!-- Access size directly from item -->
                  <p>Price: â‚¹<%= item.product.price.toFixed(2) %>
                  </p> <!-- Access price from item.product -->
                  <button onclick="addToCart('<%= item.product._id %>', '<%= item.size %>')"
                    class="btn btn-primary btn-sm">Add To Cart</button>
                  <button onclick="removeFromWishlist('<%= item.product._id %>', '<%= item.size %>')"
                    class="btn btn-outline-danger btn-sm">Remove from Wishlist</button>
                </div>
              </div>
            </div>
            <% }); %>
              <% } else { %>
                <div class="col-md-12">
                  <p>Your wishlist is empty.</p>
