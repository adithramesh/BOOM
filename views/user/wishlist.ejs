  <script>

    async function addToCart(productId, size) {
      const response = await fetch('/user/add-cart', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId, size })
      });

      if (response.ok) {
        removeFromWishlist(productId, size);
      } else {
        console.error('Failed to add to cart');
        Swal.fire('Error', 'Failed to add to cart', 'error');
      }
    }

    async function removeFromWishlist(productId, size) {
      const response = await fetch('/user/remove-wishlist', {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId, size })
      });

      const data = await response.json();

      if (response.ok && data.success) {
        location.reload();
      } else {
        console.error('Failed to remove from wishlist:', data.message);
        Swal.fire('Error', data.message || 'Failed to remove from wishlist', 'error');
      }
    }

  </script>
